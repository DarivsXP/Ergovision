#!/bin/bash

echo "--- FINAL DEPLOYMENT SCRIPT ---"

# 1. Clear Caches (Standard)
echo "Clearing Caches..."
php artisan config:clear || true
php artisan route:clear || true
php artisan view:clear || true

# 2. Link Public Storage
# This creates the link in 'public/storage', which is safe.
# We do NOT touch the main 'storage/' folder anymore.
echo "Linking Public Storage..."
php artisan storage:link || true

echo "--- READY FOR AMEZMO HANDOVER ---"
exit 0